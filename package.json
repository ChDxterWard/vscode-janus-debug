{
    "name": "vscode-janus-debug",
    "displayName": "vscode-janus-debug",
    "description": "VS Code plugin for debugging JANUS applications",
    "version": "0.0.1",
    "publisher": "bkircher",
    "author": {
        "name": "otris software",
        "email": "kircher@otris.de"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/otris/vscode-janus-debug"
    },
    "engines": {
        "vscode": "^1.6.0"
    },
    "categories": [
        "Debuggers"
    ],
    "activationEvents": [
        "onCommand:extension.getHostName"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "breakpoints": [
            {
                "language": "javascript"
            }
        ],
        "debuggers": [
            {
                "type": "janus",
                "label": "JANUS Debugger",
                "program": "./out/src/debugSession.js",
                "runtime": "node",
                "variables": {
                    "AskForHostName": "extension.getHostName"
                },
                "configurationAttributes": {
                    "attach": {
                        "required": [],
                        "properties": {
                            "port": {
                                "type": "number",
                                "description": "The debug port to attach to.",
                                "default": 8089
                            },
                            "host": {
                                "type": "string",
                                "description": "The IP address of the host where the application runs on.",
                                "default": "localhost"
                            },
                            "stopOnEntry": {
                                "type": "boolean",
                                "description": "Automatically stop target after attaching.",
                                "default": false
                            },
                            "log": {
                                "type": "object",
                                "description": "Lets you configure diagnostic logging of the debug adapter.",
                                "properties": {
                                    "fileName": {
                                        "type": "string",
                                        "description": "The name of the logfile.",
                                        "default": "${workspaceRoot}/vscode-janus-debug.log"
                                    },
                                    "logLevel": {
                                        "type": "object",
                                        "description": "The minimum loglevel(s) for messages written to the logfile.",
                                        "properties": {
                                            "default": {
                                                "type": "string",
                                                "enum": [
                                                    "Debug",
                                                    "Info",
                                                    "Warn",
                                                    "Error"
                                                ],
                                                "description": "The default loglevel."
                                            }
                                        },
                                        "additionalProperties": {
                                            "type": "string",
                                            "enum": [
                                                "Debug",
                                                "Info",
                                                "Warn",
                                                "Error"
                                            ]
                                        },
                                        "default": {
                                            "default": "Debug"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "name": "Debug JANUS app",
                        "type": "janus",
                        "request": "attach",
                        "port": 8089,
                        "host": "${workspaceRoot}/${command.AskForHostName}",
                        "stopOnEntry": false,
                        "log": {
                            "fileName": "${workspaceRoot}/vscode-janus-debug.log",
                            "logLevel": {
                                "default": "Debug"
                            }
                        }
                    }
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "node_modules\\.bin\\tsc -p ./",
        "compile": "node_modules/.bin/tsc -p ./",
        "watch": "node_modules/.bin/tsc -watch -p ./",
        "test": "node_modules/.bin/mocha --timeout 10000 -u tdd ./out/test/",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "uuid": "^2.0.3",
        "vscode-debugprotocol": "^1.14.0",
        "vscode-debugadapter": "^1.14.0"
    },
    "devDependencies": {
        "typescript": "^2.0.6",
        "vscode": "^1.0.1",
        "mocha": "^2.4.5",
        "vscode-debugadapter-testsupport": "^1.14.0",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}
